{
  "compilerOptions": {
    "noEmit": true,
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./perf/**/*.ts", "./tsup.config.ts"],
  "references": [{ "path": "./tsconfig.docs.json" }]
}
